{{#simple-form/section
  form=this
  changeset=changeset
  tagName="form"
  disabled=disabled
  _change=(action "mergeSubChangeset")
  _remove=(action "removeSubChangeset")
as |f sectionChangeset|}}
  {{yield
    (hash
      errors=errors
      changes=changes
      isValid=isValid
      isInvalid=isInvalid
      isDisabled=disabled
      isPristine=isPristine

      input=f.input
      section=(component "simple-form/section"
        form=this
        parentSection=f
        disabled=f.disabled
        parentChangeset=sectionChangeset
        _change=(action "mergeSubChangeset" )
        _remove=(action "removeSubChangeset")
      )
      submit=(component "simple-form/simple-submit"
        form=elementId
        disabled=disabled
        action=(action "submitForm")
      )
      rollback=(component "simple-form/simple-submit"
        disabled=disabled
        action=(action "rollback")
      )
    )

    sectionChangeset
    compositeChangeset
  }}
{{/simple-form/section}}
