{{#simple-form/section
  form=this
  changeset=changeset
  isEnabled=true
  disabled=disabled
  _change=(action "mergeSubChangeset")
  _remove=(action "removeSubChangeset")
as |f changeset|}}
  {{yield (hash
    errors=errors
    changes=changes
    isValid=isValid
    isInvalid=isInvalid
    isDisabled=disabled

    input=f.input
    section=f.section
    submit=(component "simple-form/simple-submit"
      form=elementId
      disabled=disabled
      action=(action "submitForm")
    )
    rollback=(component "simple-form/simple-submit"
      disabled=disabled
      action=(action "rollback")
    )
  ) changeset}}
{{/simple-form/section}}
