{{#if hasInlineLabel}}
  <div class="SimpleForm-field SimpleForm-field__inline {{if isInvalid "SimpleForm-field__invalid"}}">
    <label for={{inputElementId}}>
      {{#unless isInputFirst}}{{label}}{{/unless}}
      {{component inputComponentName
        id=inputElementId
        name=name
        isValid=isValid
        inputAttributes=inputAttributes
        value=value
        focus-in=(action "inputGainedFocus")
        focus-out=(action "inputLostFocus")
        on-change=(action "inputValueChanged")
      }}
      {{#if isInputFirst}}{{label}}{{/if}}
    </label>
  </div>
{{else}}
  {{#if label}}<label for={{inputElementId}}>{{label}}</label>{{/if}}
  <div class="SimpleForm-field {{if isInvalid "SimpleForm-field__invalid"}}">
    {{#if hasBlock}}
      {{#component inputComponentName
        id=inputElementId
        name=name
        isValid=isValid
        inputAttributes=inputAttributes
        value=value
        focus-in=(action "inputGainedFocus")
        focus-out=(action "inputLostFocus")
        on-change=(action "inputValueChanged")
        as |input|
      }}
        {{yield input}}
      {{/component}}
    {{else}}
      {{component inputComponentName
        id=inputElementId
        name=name
        isValid=isValid
        inputAttributes=inputAttributes
        value=value
        focus-in=(action "inputGainedFocus")
        focus-out=(action "inputLostFocus")
        on-change=(action "inputValueChanged")
      }}
    {{/if}}
    {{#if hasErrors}}
      <p class="SimpleForm-errors">{{errorMessages}}</p>
    {{/if}}
    {{#if hasHint}}
      <p class="SimpleForm-hint">{{hintMessage}}</p>
    {{/if}}
  </div>
{{/if}}