{{#if placeholder}}
<option
  value=""
  selected={{ted-select-is-equal null value}}
  class="SimpleForm-select__placeholder">
  {{placeholder}}
</option>
{{/if}}
{{#each sortedContent key="@index" as |option|}}
  <option
    value={{get option optionValuePath}}
    selected={{ted-select-is-equal (get option optionValuePath) (get value optionValuePath)}}
    disabled={{get option optionDisabledKey}}>
    {{get option optionLabelPath}}
  </option>
{{/each}}